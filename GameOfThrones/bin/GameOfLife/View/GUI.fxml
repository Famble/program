<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBoxRoot" onKeyPressed="#keyListener" style="-fx-background-color: Black;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameOfLife.Controller.Controller">
   <children>
      <MenuBar VBox.vgrow="NEVER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox fx:id="HBoxUpper" spacing="10.0">
         <children>
            <Label text="Survival:">
               <HBox.margin>
                  <Insets top="12.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="survival" prefHeight="40.0" prefWidth="76.0" text="23">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <Label layoutX="10.0" layoutY="28.0" text="Birth:">
               <HBox.margin>
                  <Insets top="12.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="birth" layoutX="87.0" layoutY="23.0" prefHeight="40.0" prefWidth="76.0" text="3">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <ComboBox fx:id="comboBox" layoutX="15.0" layoutY="33.0" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="40.0" prefWidth="150.0" promptText="Conway's Life">
		      <items>
		        <FXCollections fx:factory="observableArrayList">
		          <String fx:value="2x2" />
		          <String fx:value="34Life" />
		          <String fx:value="Amoeba" />
		          <String fx:value="Assimilation" />
		          <String fx:value="Coagulations" />
		          <String fx:value="Conway's Life" />
		          <String fx:value="Coral" />
		          <String fx:value="Day and Night" />
		          <String fx:value="Diamoeba" />
		          <String fx:value="Dot Life" />
		          <String fx:value="Dry Life" />
		          <String fx:value="Fredkin" />
		          <String fx:value="Seeds" />
		          <String fx:value="High Life" />
		          <String fx:value="Life Without Death" />
		          <String fx:value="Live Free or Die" />
		          <String fx:value="Long Life" />
		          <String fx:value="Maze" />
		          <String fx:value="Mazectric" />
		          <String fx:value="Move" />
		          <String fx:value="Pseudo Life" />
		          <String fx:value="Serviettes" />
		          <String fx:value="Serviettes" />
		          <String fx:value="Stains" />
		          <String fx:value="Vote4/5" />
		          <String fx:value="Vote" />
		          <String fx:value="Gnarl" />
		          <String fx:value="Replicator" />
		          <String fx:value="WalledCities" />
		        </FXCollections>
		      </items>
		     </ComboBox>
            <Region maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="103.0" />
         </children></HBox>
      <HBox fx:id="canvasParent" minHeight="10.0" minWidth="10.0" onMouseDragged="#mouseDragged" prefHeight="400.0" style="-fx-background-color: black;" VBox.vgrow="ALWAYS">
         <children>
            <Canvas fx:id="canvas" height="10.0" nodeOrientation="INHERIT" onMouseClicked="#mouseClicked" onMouseEntered="#handleMouseEntered" onMousePressed="#handleMouseEntered" onMouseReleased="#handleMouseEntered" onScroll="#handleZoom" width="10.0" />
            <VBox fx:id="VBoxRight" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="150.0">
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#handleStartClick" prefHeight="90.0" prefWidth="90.0" text="Play">
                  	<VBox.margin>
                        <Insets left="30.0" />
                     </VBox.margin>
                  </Button>   
                  
                  <Button mnemonicParsing="false" onAction="#handleResetClick" prefHeight="90.0" prefWidth="90.0" text="Reset">
                  	<VBox.margin>
                        <Insets left="30.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  	
                  <ToggleButton fx:id="drawDrag" mnemonicParsing="false" prefHeight="50.0" prefWidth="90.0" selected="true" text="Draw" onMouseClicked="#handleDrawClick">
                  	<VBox.margin>
                        <Insets left="30.0" top="10.0" />
                     </VBox.margin>
                  </ToggleButton>
                  
                  <Label text="Speed">
                     <VBox.margin>
                        <Insets left="55.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Slider fx:id="sliderSpeed" blockIncrement="100" max="150.0" min="1.0" onMouseDragged="#speedSliderDragged" showTickMarks="true" value="0.1">
                  	<VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Slider>   
                  
                  <Label text="Zoom:">
                     <VBox.margin>
                        <Insets top="10.0" left="55.0" />
                     </VBox.margin>
                  </Label>
                  <Slider fx:id="sliderZoom" max="10.0" min="1.0" onMouseDragged="#zoomSliderDragged" showTickMarks="true" value="5.0">
                  	 <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Slider>   
                  
                  <ColorPicker fx:id="colorPicker" onAction="#changeColor">
                  	<VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </ColorPicker>
                  
                  <Button fx:id="editor" mnemonicParsing="false" onAction="#handleEditorClick" prefHeight="31.0" prefWidth="153.0" text="Pattern Editor">
                  	 <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                   </Button>
                   
                  <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="153.0" text="Save" />
                  <Button mnemonicParsing="false" prefHeight="31.0" prefWidth="153.0" text="Load" onAction="#handleOpen"/>
                  
               </children></VBox>
         </children>
      </HBox>
      <HBox style="-fx-background-color: #e9e9e9;" />
      <HBox fx:id="HBoxLower" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="90.0" spacing="40.0" VBox.vgrow="NEVER">
         <children>
            <VBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="90.0">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </VBox>
            <VBox>
               <HBox.margin>
                  <Insets left="10.0" top="20.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
