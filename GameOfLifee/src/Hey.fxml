<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox onZoom="#handleZoom" onZoomStarted="#handleZoom" style="-fx-background-color: Black;" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <MenuBar VBox.vgrow="NEVER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox spacing="10.0" style="-fx-background-color: white;">
         <children>
            <Label text="Survival:">
               <HBox.margin>
                  <Insets top="6.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="survival" prefHeight="26.0" prefWidth="76.0" text="23">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <Label layoutX="10.0" layoutY="28.0" text="Birth:">
               <HBox.margin>
                  <Insets top="6.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="birth" layoutX="87.0" layoutY="23.0" prefHeight="26.0" prefWidth="76.0" text="3">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children></HBox>
      <HBox fx:id="canvasParent" minHeight="10.0" minWidth="10.0" onMouseDragged="#mouseDragged" onZoom="#handleZoom" onZoomFinished="#handleZoom" onZoomStarted="#handleZoom" prefHeight="400.0" VBox.vgrow="ALWAYS">
         <children>
            <Canvas fx:id="canvas" height="10.0" nodeOrientation="INHERIT" onMouseClicked="#mouseClicked" onMouseEntered="#handleMouseEntered" onMousePressed="#handleMouseEntered" onMouseReleased="#handleMouseEntered" onZoom="#handleZoom" onZoomFinished="#handleZoom" onZoomStarted="#handleZoom" width="10.0" />
         </children>
      </HBox>
      <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="90.0" spacing="60.0" style="-fx-background-color: #e9e9e9;" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#handleStartClick" prefHeight="40.0" prefWidth="120.0" text="Play">
               <HBox.margin>
                  <Insets left="50.0" top="30.0" />
               </HBox.margin>
            </Button>
            <Button layoutX="60.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleResetClick" prefHeight="40.0" prefWidth="120.0" text="Reset">
               <HBox.margin>
                  <Insets top="30.0" />
               </HBox.margin>
            </Button>
            <VBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="90.0">
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
               <children>
                  <Label text="Speed">
                     <VBox.margin>
                        <Insets left="50.0" />
                     </VBox.margin>
                  </Label>
                  <Slider fx:id="sliderSpeed" blockIncrement="100" max="400" min="1.0" onMouseDragged="#speedSliderDragged" showTickMarks="true" value="10.0" />
               </children>
            </VBox>
            <VBox>
               <HBox.margin>
                  <Insets left="10.0" top="20.0" />
               </HBox.margin>
               <children>
                  <Label text="Zoom:">
                     <VBox.margin>
                        <Insets left="40.0" />
                     </VBox.margin>
                  </Label>
                  <Slider fx:id="sliderZoom" min="1.0" onMouseDragged="#zoomSliderDragged" showTickMarks="true" value="1.0" />
               </children>
            </VBox>
            <ColorPicker fx:id="colorPicker" onAction="#changeColor">
               <HBox.margin>
                  <Insets right="20.0" top="35.0" />
               </HBox.margin>
            </ColorPicker>
         </children>
      </HBox>
   </children>
</VBox>
